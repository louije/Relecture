<p>
	<%= link_to "Sign out", log_out_service_path(@service) %>
</p>

<div class="row">
	<h4 class="col-md-6"><%= @service.name %></h4>
	<%= form_for @service, url: service_path(@service), method: :post, as: :list_options, html: { class: "pull-right form-inline" } do |f| -%>
		<div class="form-group">
			<%= f.select :folder, options_for_select(@service.available_folders, @service.folder), {}, class: "form-control input-sm " %>
		</div>
		<%= f.submit "Choose folder", class: "btn btn-primary input-sm" %>
	<% end -%>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Random link</h3>
  </div>
  <div class="panel-body">
  	<%= link_to @random.title, @random.url %> <small> Â· <%= @random.formatted_date %></small>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Saved on this day</h3>
  </div>
  <div class="panel-body">
	  <% @years_ago.each do |link| %>
	  	<p>
	  	<%= link_to link.title, link.url %> <small> Â· <%= link.formatted_date %></small>
	  	</p>
	  <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed table-responsive">
	<thead>	
		<th class="">Title</th>
		<th class="">Date read</th>
	</thead>
	<% @bookmarks.each do |link| %>
		<tr>
			<td><%= link_to link.title, link.url %></td>
			<td><%= link.formatted_date %></td>
		</tr>
	<% end %>
</table>

